CREATE TABLE Cliente (
ClienteID INT,
Empresa VARCHAR( 40 ) ,
Endereco VARCHAR( 60 ),
Cidade VARCHAR( 15 ),
Estado VARCHAR( 15 ),
CEP VARCHAR( 10 ),
Pais VARCHAR( 15 ),
Fone VARCHAR( 24 ),
PRIMARY KEY (ClienteID));

CREATE TABLE Fornecedor (
FornecedorID int not null,
nome varchar(40),
endereco varchar(60),
primary key (FornecedorID));


CREATE TABLE Vendedor (
VendedorID INT NOT NULL,
Nome VARCHAR( 40 ) NOT NULL,
PRIMARY KEY ( VendedorID ));

CREATE TABLE Produto(
ProdutoID INT not null,
Descricao varchar (40) ,
PrecoUnitario real,
FornecedorID int,
primary key (ProdutoID),
FOREIGN KEY (FornecedorID) REFERENCES Fornecedor(FornecedorID));
 

CREATE TABLE Pedido (
PedidoID INT ,
VendedorID INT,
ClienteID INT,
ProdutoID INT,
Quantidade INT,
PRIMARY KEY ( PedidoID ),
FOREIGN KEY (VendedorID) REFERENCES Vendedor(VendedorID),
FOREIGN KEY (ClienteID) REFERENCES Cliente(ClienteID),
FOREIGN KEY (ProdutoID) REFERENCES Produto(ProdutoID));

CREATE FUNCTION FornecedorProduto (a VARCHAR(30))
RETURNS VARCHAR(60)
RETURN
(SELECT CONCAT(Produto.Descricao, ' Ã© fornecido por: ', Fornecedor.nome)  
              FROM Produto INNER JOIN Fornecedor ON Produto.FornecedorID=Fornecedor.FornecedorID
              WHERE Produto.Descricao = a);

CREATE FUNCTION ajuste (a DECIMAL(10,2), b INT)
    RETURNS DECIMAL(10,2)
    RETURN a * b;

